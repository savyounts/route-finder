<div class="form_bar white_bar">
  <h1 class="welcome_text">Edit your route</h1>
  <div class="prefilled_form">
    <form action="/routes/<%= @route.id %>" method="post">
      <h4 class="prefilled_form_text welcome_text ">Name: <%= @route.name %></h4>
      <h4 class="prefilled_form_text welcome_text">Grade: <%= @route.grade %></h4>
      <h4 class="prefilled_form_text welcome_text">Location: <%= @route.location %></h4><br>

      <input id="hidden" type="hidden" name="_method" value="patch">
      <label for="route_staus[climb_style]">Type of Route:</label><br>
      <input type="text" name="route_status[climb_style]" placeholder="i.e. Bouldering" value="<%= @rs.climb_style %>" required><br><br>

      <label for="route_staus[status]">Status:</label><br>

      <input type="radio" name="route_status[status]" value="Scoping It Out" <%='checked' if my_routes_status(@route, current_user).status == 'Scoping It Out' %> required> Scoping It Out<br>
      <input type="radio" name="route_status[status]" value="In Progress" <%='checked' if my_routes_status(@route, current_user).status == 'In Progress' %> required> In Progress<br>
      <input type="radio" name="route_status[status]" value="Sent Dat Ish" <%='checked' if my_routes_status(@route, current_user).status == 'Sent Dat Ish' %> required> Sent Dat Ish<br><br>

      <label for="route_staus[current_issue]">Current Issues:</label><br>
      <textarea name="route_status[current_issue]" required><%= @rs.current_issue%></textarea><br>

      <input type="submit" value="Update Status">
    </form>
  <div>
</div>
