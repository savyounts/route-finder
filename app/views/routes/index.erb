<h1 class="show_page_headers welcome_text">All Routes</h1>

<div class="route_details">
  <% @routes.each do |r| %>
  <div class="user_route_card">
    <a href="/routes/<%= r.id %>"><h2><%= r.name %></h2></a>
    <p>Grade: <%= r.grade %></p>
    <p>Location: <%= r.location %></p>
    <% r.users.each do |u| %>
      <a href="/users/<%= u.id %>"><p class='route_users'><%= u.name %>, </p></a>
    <% end %>
  </div>
  <% end %>

</div>
