<% if current_user == @user %>
  <h1 class="welcome_text">Welcome, <%= current_user.username.capitalize %></h1>
<% else %>
  <h1 class="welcome_text"><%= @user.username %>'s Projects</h1>
<% end %>

<% if current_user == @user %>
  <h3 class="welcome_text"> Here is a list of all your current projects: </h3>
<% else %>
  <h3 class="welcome_text"> Check out <%= @user.username %>'s current projects: </h3>
<% end %>
<br><br>

<div class="route_details">
  <% @user.routes.each do |r| %>
    <div class="user_route_card"><a href="/routes/<%= r.id %>"> <%= r.name %></a>
      <%= r.grade %><br>
      Status: <%= my_routes_status(r, @user).status %></div>
  <% end %>
</div>

<% if current_user == @user %>
<button onclick="window.location.href='/routes/new'">Create a new route!</button><br><br>
<% end %>
