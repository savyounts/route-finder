<% if current_user == @user %>
  <h1 class="welcome_text show_page_headers">Welcome, <%= current_user.name %></h1>
<% else %>
  <h1 class="welcome_text show_page_headers"><%= @user.name %>'s Projects</h1>
<% end %>

