<div class="route_details">
  <% @user.routes.each do |r| %>
    <div class="user_route_card">
      <a href="/routes/<%= r.id %>"><h2> <%= r.name %></h2></a>
      <p><%= r.grade %><p>
      <p>Status: <%= my_routes_status(r, @user).status %></p>
    </div>
  <% end %>
</div>

<% if current_user == @user %>
<button onclick="window.location.href='/routes/new'">Create a new route!</button><br><br>
<% end %>
