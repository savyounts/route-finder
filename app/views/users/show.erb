<% if current_user == @user %>
  <h1>Welcome, <%= current_user.username.capitalize %></h1>
<% else %>
  <h1><%= @user.username %>'s Projects</h1>
<% end %>

<% if current_user == @user %>
  <h3> Here is a list of all your current projects: </h3>
<% else %>
  <h3> Check out <%= @user.username %>'s current projects: </h3>
<% end %>
<br><br>

<ul class="route_details">
  <% @user.routes.each do |r| %>
    <li><a href="/routes/<%= r.id %>"> <%= r.name %></a>
      <%= r.grade %><br>
      Status: <%= my_routes_status(r, @user).status %></li><br>
  <% end %>
</ul>

<% if current_user == @user %>
<button onclick="window.location.href='/routes/new'">Create a new route!</button><br><br>
<% end %>
